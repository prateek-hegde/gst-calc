<html>
<head>
<title>Pie Chart</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
<script>
@media only screen and (max-width: 600px) {
    .container {
        color: lightblue;
    }
}
</script>
</head>
<body>
  <div class="container img-responsive">
    <canvas id="myChart"></canvas> <br />
    <div class="text-center"><a href="/" class="btn btn-primary">Go Back</a>
    </div>
  </div>
<script>
var data = <%- JSON.stringify(results); %>
var gst5 = 0; var gst12 = 0; var gst18 = 0; var gst28 = 0;
for (let i=0; i<data.length; i++){
    if(data[i].gst == 5){
      gst5++;
    } else if (data[i].gst == 12) {
      gst12++;
    } else if (data[i].gst == 18) {
      gst18++;
    } else if (data[i].gst == 28) {
      gst28++;
    }
}
console.log(gst5); console.log(gst12);console.log(gst18); console.log(gst28);
var ctx = document.getElementById("myChart");
var myPieChart = new Chart(ctx,{
    type: 'pie',
    data: {
      labels: ["5%", "12%", "18%", "28%"],
      datasets: [{
        backgroundColor: ["#3e95cd", "#8e5ea2","#3cba9f","#e8c3b9"],
        data: [gst5,gst12,gst18,gst28]
      }]
    },
    options: {
      title: {
        display: true,
        text: 'Pie Chart Representation of GST  '
      }
    }
});
</script>
</body>
</html>
